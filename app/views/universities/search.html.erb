<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1>Search Universities</h1>
    <%= form_with url: results_universities_path, method: :post, local: true do |form| %>
      <div class="form-group">
        <%= form.label :country, "Country" %>
        <%= form.text_field :country, class: 'form-control', placeholder: "Enter the country name" %>
      </div>
      <%= form.submit 'Search', class: 'btn btn-primary mt-3' %>
    <% end %>
  </div>
</div>
